<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <div class="race-wrapper">
      <h2>Les prochaines cyclosportives</h2>
      <div class="race-wrapper-inside">
        <% @races.each do |race| %>
        <div class="race">
          <div class='race-body'>
            <h3><%= race.name %></h3>
            <p><strong>Distances :</strong> <%= race.distance %> KM </p>
          </div>
          <ul class="list-inline product-controls hidden-sm hidden-xs">
          <li>
            <%= form_tag charges_path do %>
              <article>
                <% if flash[:error].present? %>
                  <div id="error_explanation">
                    <p><%= flash[:error] %></p>
                  </div>
                <% end %>
                <label class="">
                  <p>Prix : <span style="color:#F75100"> <%= race.price/100 %> € </span></p>
                </label>
              </article>
              <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                      data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                      data-description="Inscription à la <%= race.name %>"
                      data-amount="<%= race.price %>"
                      data-locale="auto"></script>
            <% end %>
          </li>
          </ul>
        </div>
        <br>
        <% end %>
      </div>
      </div>
    </div>
  </div>ra
</div>




