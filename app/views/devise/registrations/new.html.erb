
<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <h2 style="font-size:25px;font-weight:bold">Cr√©er votre compte client</h2><br>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true, placeholder: "", label:"Email" %>
        <%= f.input :password, required: true, label:"Entrer votre mot de passe",placeholder: "", hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
        <%= f.input :password_confirmation, required: true, placeholder: "", label:"Confirmer votre Mot de Passe" %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Go !" %>
      </div>
      <% end %>
      <br>
      <%= render "devise/shared/links" %>
      <br>
    </div>
  </div>
</div>

