<ul class="list-inline">
  <li>
    <%- if controller_name != 'sessions' %>
      <%= link_to "Connexion", new_session_path(resource_name) %><br />
    <% end -%>
  </li>
  <li>
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to "Créer un compte", new_registration_path(resource_name) %><br />
    <% end -%>
  </li>
  <li>
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "Mot de passe oublié ?", new_password_path(resource_name) %><br />
    <% end -%>
  </li>
  <li>
    <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
      <%= link_to "Vous n'avez pas reçu vos instructions de confirmation ?", new_confirmation_path(resource_name) %><br />
    <% end -%>
  </li>
  <li>
    <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
      <%= link_to "Vous n'avez pas reçu vos informations de débloquage? ", new_unlock_path(resource_name) %><br />
    <% end -%>
  </li>
  <li>
    <%- if devise_mapping.omniauthable? %>
      <%- resource_class.omniauth_providers.each do |provider| %>
        <%= link_to "S'enregistrer en tant que : #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider) %><br />
      <% end -%>
    <% end -%>
  </li>
</ul>











