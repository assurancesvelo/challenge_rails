  <div class="container">
    <div class="row">
    <% @events.each do |event| %>
      <div class="col-sm-4">
        <div class="card-event" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_path  event.picture %>');">
          <div class="card-category-event"><p><%= event.etape %></p></div>
          <div class="card-description-event">
            <h2><%= event.name %></h2>
            <p><%= event.date %> : <%= event.place %></p>
          </div>
          <a class="card-link-event" href="events/<%= event.id %>"></a>
        </div>
        <br>
      </div>
      <% end %>
    </div>
  </div>
</div>


