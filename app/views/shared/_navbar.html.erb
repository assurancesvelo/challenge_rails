<div class="navbar-wagon">
  <!-- Logo -->
  <a href="/" class="navbar-wagon-brand">
    <%= image_tag "logo.png" %>
  </a>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">


    <!-- Text link -->
<!--     <a href="/#recompenses" class="navbar-wagon-item navbar-wagon-link">Recompenses</a>
 -->
    <!-- Text link -->
<!--     <%= link_to "Classement", classements_path, class: "navbar-wagon-item navbar-wagon-link" %>
 -->
    <!-- Text link -->
<!--     <%= link_to 'Réglement', reglements_path, class: "navbar-wagon-item navbar-wagon-link" %>
 -->
    <% if user_signed_in? %>

    <!-- Profile picture and dropdown -->
    <div class="navbar-wagon-item">
      <div class="dropdown">
        <a href="" class="avatar dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown">
          <% if current_user.avatar %>
          <%= cl_image_tag current_user.avatar.path, width: 120, height: 120, crop: :fill, class: 'avatar dropdown-toggle' %>
          <% else %>
          <%= image_tag "profile.jpg", class: "avatar dropdown-toggle" %>
          <% end %>
        </a>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li><%= link_to 'Mon compte', user_path(current_user) %></li>
          <li><%= link_to "Deconnexion", destroy_user_session_path, method: :delete %></li>
        </ul>
      </div>
    </div>

    <% else %>

    <%= link_to "Connexion", new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <%= link_to "Créer un compte",  new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link-orange"%>

    <% end %>

    <!-- Button (call-to-action) -->
    <%= link_to "s'inscrire à une cyclo", races_path, class: "navbar-wagon-item button-orange btn" %>
  </div>

  <!-- Dropdown appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><a href="/#recompenses">Recompenses</a></li>
        <li><a href="#">Classement</a></li>
        <li><a href="#">Réglement</a></li>
        <li><a href="#">Inscription</a></li>
      </ul>
    </div>
  </div>
</div>
